<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharePage_Activity">

    <ImageView
        android:id="@+id/splash_imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/animalcrossing1" />

    <TextView
        android:id="@+id/game_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="150dp"
        android:background="#000000"
        android:padding="12dip"
        android:text="Game Name: "
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/game_releaseDate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="120dp"
        android:background="#000000"
        android:padding="12dip"
        android:text="Game Release Date: "
        android:textColor="#ffffffff" />
    <TextView
        android:id="@+id/game_platform_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="90dp"
        android:background="#000000"
        android:padding="12dip"
        android:text="Game Platform: "
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:padding="12dip"
        android:text="love the game!!! Check it out :)"
        android:textColor="#ffffffff" />


</RelativeLayout>