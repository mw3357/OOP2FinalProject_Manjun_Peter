<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha = "0.9"
    android:background="#000000"
    tools:context=".Game_Activity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitStart"
        android:src="@drawable/darksiders2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:gravity=""
        android:text="Title"
        android:textColor = "	#ece0d1"
        android:textSize="50sp" />

        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="85sp"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80sp"
            android:layout_marginRight="-11dp"
            android:layout_toRightOf="@+id/gameTitle"
            android:backgroundTint="#FFC107"
            android:text="Share"
            android:onClick="toSharePage"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gamePlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="PS4"
            android:textColor = "	#ece0d1"
            android:textSize="20sp" />
    </LinearLayout>



    <TextView
        android:id="@+id/gameReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="03.01.2020"
        android:textColor = "	#ece0d1"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16sp"
            android:text="Introduction:"
            android:textColor = "	#ece0d1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/addWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:backgroundTint="#FFC107"
            android:text="Add to Wishlist"
            android:onClick="toWishList"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/bioBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="16sp"
        android:textColor = "	#ece0d1"
        android:justificationMode="inter_word"
        android:text="DARKSIDERS: GENESIS is an action/adventure game "
        android:textSize="20sp" />


</LinearLayout>